{
	"tasks": {
		"build": "find packages -name 'build.ts' | xargs deno run -A"
	},
	"fmt": {
		"semiColons": false,
		"lineWidth": 100,
		"useTabs": true,
		"proseWrap": "never"
	},
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"types": ["./types.d.ts"],
		"lib": ["deno.window", "dom", "dom.iterable"],
		"exactOptionalPropertyTypes": true
	}
}
